<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_listavehiculoscliente_Patente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patente:"
            style="@style/DetalleItem.Titulo"/>
    <TextView
            android:id="@+id/tv_listavehiculoscliente_Estdo"
            app:layout_constraintTop_toBottomOf="@id/tv_listavehiculoscliente_Patente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            style="@style/DetalleItem"/>
    <TextView
            android:id="@+id/tv_listavehiculoscliente_Inicio"
            app:layout_constraintTop_toBottomOf="@id/tv_listavehiculoscliente_Estdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desde:"
            style="@style/DetalleItem"/>
    <TextView
            android:id="@+id/tv_listavehiculoscliente_Destino"
            app:layout_constraintTop_toBottomOf="@id/tv_listavehiculoscliente_Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasta:"
            style="@style/DetalleItem"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Tap para ver detalles"
              app:layout_constraintTop_toBottomOf="@id/tv_listavehiculoscliente_Destino"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>