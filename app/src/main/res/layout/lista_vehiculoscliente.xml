<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_listavehiculoscliente_patente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patente:"
            style="@style/DetalleItem.Titulo"/>
    <TextView
            android:id="@+id/tv_listavehiculoscliente_dueño"
            app:layout_constraintTop_toBottomOf="@id/tv_listavehiculoscliente_patente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dueño del vehículo:"/>
    <TextView
            android:id="@+id/tv_listavehiculoscliente_desde"
            app:layout_constraintTop_toBottomOf="@id/tv_listavehiculoscliente_dueño"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección de inicio:"/>

    <TextView
            android:id="@+id/tv_listavehiculoscliente_estado"
            app:layout_constraintTop_toBottomOf="@id/tv_listavehiculoscliente_desde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado Reserva:"
            android:textStyle="bold"
            android:textColor="@color/Correcto"
            style="@style/DetalleItem"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Tap para ver detalles"
              app:layout_constraintTop_toBottomOf="@id/tv_listavehiculoscliente_estado"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:id="@+id/textView"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
</android.support.constraint.ConstraintLayout>